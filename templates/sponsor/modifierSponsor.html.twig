              {{ form_widget(form.IDEventsFK, {'attr': {'class': 'form-control'}} ) }}
              {{ form_errors(form.IDEventsFK) }}
           </div>
           <div class="form-group">
              {{ form_row(form.save, {'attr': {'class': 'btn btn-light px-5'}} )}}
                </div>
                    {{form_rest (form)}}

            </form>
                {{ form_end (form)}}
            <div>
                <a href="{{ path('app_afficher_Sponsor') }}">Liste des Sponsors</a>
            </div>
         </div>
</div>

{% endblock %}