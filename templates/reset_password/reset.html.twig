{% extends 'frontBase.html.twig' %}

{% block header %}{% endblock %}

{% block content %}


    <section id="login-reg">
        <div class="overlay pb-120">
            <div class="container">
                <div class="top-area">
                    <div class="row d-flex align-items-center">
                        <div class="col-sm-5 col">
                            <a class="back-home" href="{{ path('app_home') }}">
                                <img src="images/left-icon.png" alt="image">
                                 Retour a la page d'accueil
                            </a>
                        </div>
                        <div class="col-sm-5 col">
                            <a >
                             <a class="site-logo site-title" href="{{ path('app_home') }}"><img style="height:250px;width:250px" src="{{ asset('front/images/logo3.png') }}" alt="site-logo"></a>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="row pt-120 d-flex justify-content-center">
                    <div class="col-lg-6">
                        <div class="login-reg-main text-center">
                            <h4>Saisir un nouvea Mot de Passe</h4>
                            {{ form_start(resetForm) }}
                            <div class="form-area">
                                <form action="#">
                                    
                                    <div class="form-group">
                                        {{ form_row(resetForm.plainPassword) }}
                                    </div>
                                    
                                    <div class="form-group">
                                        <button class="cmn-btn">Changez Mot de Passe</button>
                                    </div>
                                </form>
                                {{ form_end(resetForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block footer %}{% endblock %}
