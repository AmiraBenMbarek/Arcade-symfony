<center>
<h1 style="color:#191970">Arcade</h1>
</center>
<h2 style="color:#191970">Mes Tournois</h2>
<table id="datatable" class="table table-striped table-bordered" style="border:#191970 solid 2px">
    <thead>
    <tr>
        <th style="border: #191970 solid 2px">Tournois ID</th>
        <th style="border: #191970 solid 2px">NBRparticipants</th>
        <th style="border: #191970 solid 2px">Duree Tournois </th>
        <th style="border: #191970 solid 2px">Date Tournois </th>
        <th style="border: #191970 solid 2px">Nom Jeu</th>
      

    </tr>
    </thead>
    <tbody>
    {% if(Tournois is not null) %}
        {% for Tou in Tournois %}

            <tr>
                <td style="border: #191970 solid 2px">{{Tou.id}}</td>
                <td style="border: #191970 solid 2px">{{Tou.NBRparticipants}}</td>
                <td style="border: #191970 solid 2px">{{Tou.DureeTournois }}</td>
                <td style="border: #191970 solid 2px">{{Tou.DateDebutTournois | date('d/m/Y')}}</td>
                <td style="border: #191970 solid 2px">{{ Tou.getIdjeuxfk().getNom()  }}</td>
               


            </tr>

        {% endfor %}
    {% endif %}

    </tbody>
</table>