              {{ form_widget(form.NomEvent, {'attr': {'class': 'form-control'}} ) }}
              {{ form_errors(form.NomEvent) }}
           </div>

           <div class="form-group">
              <label for="input-2">{{form_label(form.lieu)}}</label>
              {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}} ) }}
