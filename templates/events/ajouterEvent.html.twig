           </div>

            <div class="form-group">
            <label for="input-5">{{form_label(form.background_color, "couleur background")}}</label>
            {{ form_widget(form.background_color ) }}
              {{ form_errors(form.background_color) }}
           </div>

            <div class="form-group">
            <label for="input-5">{{form_label(form.border_color, "couleur de bordure")}}</label>
            {{ form_widget(form.border_color ) }}
