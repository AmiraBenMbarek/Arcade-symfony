{% extends 'backBase.html.twig' %}


{% block body %}
  <br>
    <br>
      <br>
    
<a href="{{ path('app_user_new') }}">
                    <button type="button" class="btn btn-info btn-xs"
                            style="position:absolute;top:80px;right:2%;">Ajouter un utilisateur
                    </button>
                </a>
   
    <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title">Liste des utilisateurs</h3>
			  <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr  align="center">
                            <th>Id</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Avatar</th>
                            <th>Role</th>
                            <th>IsVerified</th>
                            <th colspan="3" >actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr align="center">
                            <td>{{ user.id }}</td>
                            <td>{{ user.Username }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                                   
                                                            <img src="{{ asset('userpic/'~user.avatar) }}" alt="avatar"
                                                                style="width:100px ;margin-bottom:30%">

                                                
                            </td>
                            <td>{{ user.roles }}</td>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                             <td>
                                {{ include('user/_delete_form.html.twig')}}
                                </td>
                                <td>
                                <button class="btn"><a class="fa fa-eye" href="{{ path('app_user_show', {'id': user.id}) }}"> Show</a></button>
                                </td>
                                <td>
                                <button class="btn"><a class="fa fa-pencil" href="{{ path('app_user_edit', {'id': user.id}) }}"> Edit</a> </button>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                 </div>
        </div>
      </div>
{% endblock %}
