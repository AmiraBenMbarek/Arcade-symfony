{% extends 'backBase.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block body %}
    <br>
    <br>
      <br>
    
<a href="{{ path('app_blog_new') }}">
                    <button type="button" class="btn btn-info btn-xs"
                            style="position:absolute;top:80px;right:2%;">Ajouter un blog
                    </button>
                </a>
   

    <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Liste des Blogs</h2>
			  <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr  align="center">
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Image</th>
                <th colspan="3">actions </th>
            </tr>
        </thead>
        <tbody align="center">
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.Titre }}</td>
                <td>{{ blog.Contenu }}</td>
                <td>

                                                    {% set images = blog.image| trim('*') | split("*") %}
                                                    <picture>
                                                        {% for image in images %}
                                                            <img src="{{ asset('userpic/blogs/'~image) }}" alt="image"
                                                                style="width:100px ;margin-bottom:20%">

                                                        {% endfor %}

                                                    </picture>
                                                </td>
               <td>
                                {{ include('blog/_delete_form.html.twig') }}
                                </td>
                                <td>
                                <button class="btn"><a class="fa fa-eye" href="{{ path('app_blog_show', {'id': blog.id}) }}"> Show</a></button>
                                </td>
                                <td>
                                <button class="btn"><a class="fa fa-pencil" href="{{ path('app_blog_edit', {'id': blog.id}) }}"> Edit</a> </button>
                            </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
               </div>
        </div>
      </div>

{% endblock %}
