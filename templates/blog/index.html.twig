{% extends 'backBase.html.twig' %}

{% block title %}Blog index{% endblock %}

{% block content %}
    <br>
    <br>
      <br>
    
<a href="{{ path('app_blog_new') }}">
                    <button type="button" class="btn btn-info btn-xs"
                            style="position:absolute;top:80px;right:2%;">Ajouter un blog
                    </button>
                </a>
   

    <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h2 class="card-title">Liste des Blogs</h2>
			  <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr  align="center">
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Image</th>
                <th colspan="3">actions </th>
            </tr>
        </thead>
        <tbody align="center">
        {% for blog in blogs %}
            <tr>
                <td>{{ blog.id }}</td>
                <td>{{ blog.Titre }}</td>
                <td>{{ blog.Contenu }}</td>
                <td>
                    <img src="{{ asset('userpic/'~blog.image) }}" alt="image"
                        style="width:100px ;margin-bottom:20%">
                </td>
               <td>
                    <form method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
                        <button class="btn"> <a class="fa fa-trash"> Delete</a>
                    </form>
                </td>
                <td>
                    <button class="btn"><a class="fa fa-eye" href="{{ path('app_blog_show', {'id': blog.id}) }}"> Show</a></button>
                </td>
                <td>
                    <button class="btn"><a class="fa fa-pencil" href="{{ path('app_blog_edit', {'id': blog.id}) }}"> Edit</a> </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
               </div>
        </div>
      </div>

{% endblock %}
