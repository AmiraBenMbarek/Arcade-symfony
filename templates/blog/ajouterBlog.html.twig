  
  {% extends 'backBase.html.twig' %}

{% block title %}ajouter Blog{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row mt-3">
      <div class="col-lg-6">
         <div class="card">
           <div class="card-body">
           <div class="card-title"> Blog </div>
           <hr>
           {{ form_start (form) }}
           <div class="form-group">
          {{ form_label (form.titre,"Titre") }}
                      {{ form_widget (form.titre,{'attr':{'class':'form-control form-control-rounded'}}) }}
           </div>
           <div class="form-group">
        {{ form_label (form.contenu,"Contenu") }}
                      {{ form_widget (form.contenu,{'attr':{'class':'form-control form-control-rounded'}}) }}
           </div>
           <div class="form-group">
            
                       {{ form_label (form.image,"Image") }}
                      {{ form_widget (form.image,{'attr':{'class':'form-control form-control-rounded'}}) }}
           </div>
           <div class="form-group">
             {{ form_row (form.user) }}
           </div>
            </div>
           </div>
                        {{ form_row (form.Submit,{'attr':{'class':'btn btn-light px-5'}} )}}

          {{ form_end (form) }}
         </div>
         </div>
      </div>

{% endblock %}